<view class='currAccount'>
  <icon type="download" size="45"></icon>
  <view class='title'>当前会员账号</view>
  <view class='account'>133 1234 5678</view>
</view>
<view class='enterpwd'>
  <view class='newpwd' style="flex-direction:row;">
    <icon class='icon' type="download" size="25"></icon>
    <input class='pwd' type='number' maxlength='6' placeholder='新密码(6位数字)' placeholder-style='font-size: 17px;' password='{{isPwd}}'></input>
    <view class='eye' style='background-image: url({{show}});background-size: cover;'></view>
  </view>
  <view class='confirmpwd' style="flex-direction:row;">
    <icon class='icon' type="download" size="25"></icon>
    <input class='pwd' type='number' maxlength='6' placeholder='确认密码' placeholder-style='font-size: 17px;' password='{{isPwd}}'></input>
  </view>
</view>